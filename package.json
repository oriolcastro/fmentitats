{
  "name": "fmentitats",
  "version": "2.0.0",
  "description": "Website for the FME 2024",
  "type": "module",
  "scripts": {
    "build": "concurrently \"pnpm build:tailwind\" \"pnpm build:hono\"",
    "build:hono": "vite build",
    "build:tailwind": "NODE_ENV=production pnpm dlx tailwindcss -i ./src/styles.css -o ./public/static/styles.css --minify",
    "dev": "concurrently --kill-others \"pnpm dev:tailwind\" \"pnpm dev:hono\"",
    "dev:hono": "vite",
    "dev:tailwind": "NODE_ENV=development pnpm dlx tailwindcss -i ./src/styles.css -o ./public/static/styles.css --watch",
    "serve": "serve public",
    "preview": "wrangler pages dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oriolcastro/fmentitats.git"
  },
  "author": {
    "name": "Oriol Castro Arnau",
    "email": "uri@oriolcastro.me",
    "url": "https://github.com/oriolcastro"
  },
  "contributors": [
    "Marc Ferrer Mompart (https://github.com/MarcFerrerMompart)"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oriolcastro/fmentitats/issues"
  },
  "homepage": "https://fme.cat",
  "devDependencies": {
    "@cloudflare/workers-types": "4.20240512.0",
    "@hono/vite-cloudflare-pages": "0.4.0",
    "@hono/vite-dev-server": "0.12.1",
    "@hono/vite-ssg": "0.1.0",
    "concurrently": "8.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.14",
    "serve": "14.2.3",
    "tailwindcss": "3.4.3",
    "vite": "5.2.11",
    "wrangler": "3.57.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "0.5.13",
    "hono": "4.3.8"
  }
}
